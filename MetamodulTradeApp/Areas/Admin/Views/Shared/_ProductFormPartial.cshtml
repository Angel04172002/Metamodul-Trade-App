@model ProductFormViewModel


@{
    ViewData["Title"] = "Продукт";
}


<div class="form-container text-center">




    <form asp-area="Admin" method="post" class="edit-form">


        <div class="row mb-3">
            <div class="col-sm-10 form-group text-div">
                <label asp-for="@Model.Name" class="text-label">Име на продукт</label>
                <input asp-for="@Model.Name" type="text" class="form-control">
                <span asp-validation-for="@Model.Name" class="text-danger"></span>

            </div>
        </div>



        <div class="row mb-3">

            <div class="col-sm-10 form-group textarea-div">
                <label asp-for="@Model.Description" class="textarea-label">Описание</label>
                <textarea asp-for="@Model.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>

        </div>



        <div class="row mb-3">

            <div class="col-sm-10 form-group text-div">
                <label asp-for="@Model.Price" class="text-label">Цена</label>
                <input asp-for="@Model.Price" type="number" class="form-control" />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>

        </div>


        <div class="row mb-3">

            <div class="col-sm-10 form-group text-div">
                <label asp-for="@Model.ImageUrl" class="text-label">Изображение</label>
                <input asp-for="@Model.ImageUrl" type="text" class="form-control">
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>
        </div>


        <div class="row mb-3">

            <div class="colcol-sm-10 text-div">


                <label asp-for="@Model.CategoryId">Избери категория:</label>

                <select asp-for="@Model.CategoryId" id="form-select" class="form-select" aria-label="Default select example">

                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }

                </select>

                <span asp-validation-for="@Model.CategoryId" class="small text-danger"></span>


            </div>
        </div>


        <div class="col-10">
            <input id="submit-btn" type="submit" class="w-100 btn btn-primary" value="Добави" />
        </div>
    </form>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}