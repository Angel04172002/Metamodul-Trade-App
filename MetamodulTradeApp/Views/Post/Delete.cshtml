@model PostDeleteFormViewModel

@{
    ViewBag.Title = "Изтрий публикация";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.Title</h3>
                <p class="mb-0"><strong>Дата:</strong> @Model.CreatedOn.ToString("dd/MM/yyyy HH:mm")</p>
                <p class="text-danger mt-3">Сигурни ли сте че искате да изтриете тази публикация?</p>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Изтрий</button>
                    <a asp-action="Index" class="btn btn-secondary">Назад</a>
                </form>
            </div>
        </div>
    </div>
</div>