@model ProductAllViewModel


@{
    ViewData["Title"] = "Продукти";
}

<div class="row row-cols-1 row-cols-md-3 g-4">

    @foreach (var product in Model.Products)
    {
        <div class="col">
            <div class="card h-100">
                <img src="@product.ImageUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@product.Name</h5>
                    <p class="card-text">@product.CreatedOn</p>
                    <button asp-action="Details" asp-route-id="@product.Id" id="open-submit" type="submit" class="w-100 btn open-btn btn-primary">Отвори</button>
                </div>
            </div>
        </div>
    }

</div>



@{
    var previousPage = Model.CurrentPage - 1; if (previousPage < 1) { previousPage = 1; }
    var maxPage = Math.Ceiling((double)Model.TotalProductsCount / ProductAllViewModel.ProductsPerPage);
}




<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : string.Empty)">
            <a class="page-link" asp-controller="Product" asp-action="Index" asp-route-currentPage="@previousPage" tabindex="-1">Предишна</a>
        </li>

        <li class="page-item">
            <a class="page-link" asp-controller="Product" asp-action="Index" asp-route-currentPage="@(Model.CurrentPage + 1)" tabindex="-1">Следваща</a>
        </li>
    </ul>
</nav>




@if (!Model.Products.Any())
{
    <h2 class="text-center">Няма намерени продукти!</h2>
}



@section Styles {
    <link rel="stylesheet" href="~/css/post-style.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
