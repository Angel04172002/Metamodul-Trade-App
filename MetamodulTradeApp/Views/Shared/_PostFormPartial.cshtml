@model PostFormViewModel



<div class="form-container text-center">


    <form method="post" class="edit-form">


        <div class="row mb-3">
            <div class="col-sm-10 form-group text-div">
                <label asp-for="@Model.Title" class="text-label">Заглавие</label>
                <input asp-for="@Model.Title" type="text" class="form-control">
                <span asp-validation-for="@Model.Title" class="text-danger"></span>

            </div>
        </div>



        <div class="row mb-3">

            <div class="col-sm-10 form-group textarea-div">
                <label asp-for="@Model.Description" class="textarea-label">Описание</label>
                <textarea asp-for="@Model.Description" class="form-control"  rows="3"></textarea>
                <span asp-validation-for="@Model.Description" class="small text-danger"></span>
            </div>

   
        </div>


        <div class="row mb-3">

            <div class="col-sm-10 form-group text-div">
                <label asp-for="@Model.ImageUrl" class="text-label">Изображение</label>
                <input asp-for="@Model.ImageUrl" type="text" class="form-control">
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>
         

        </div>

        <div class="col-10">
            <input id="submit-btn" type="submit" class="w-100 btn btn-primary" value="Запази" />
        </div>
    </form>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


