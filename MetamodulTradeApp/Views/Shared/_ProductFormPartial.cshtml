@model ProductFormViewModel


@{
    ViewData["Title"] = "Продукт";
}


<div class="form-container text-center">


    <h1 class="main-heading text-center">Добави продукт</h1>


    <form asp-controller="Product" asp-action="Add" class="edit-form">


        <div class="row mb-3">
            <div class="col-sm-10 form-group text-div">
                <label asp-for="@Model.Name" class="text-label" for="exampleFormControlInput1">Име на продукт</label>
                <input name="name" asp-for="@Model.Name" type="text" class="form-control" id="exampleFormControlInput1">
                <span asp-validation-for="@Model.Name" class="text-danger"></span>

            </div>
        </div>



        <div class="row mb-3">

            <div class="col-sm-10 form-group textarea-div">
                <label asp-for="@Model.Description" class="textarea-label" for="exampleFormControlTextarea1">Описание</label>
                <textarea name="description" asp-for="@Model.Description" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                <span asp-validation-for="@Model.Description" class="text-danger"></span>
            </div>

        </div>



        <div class="row mb-3">

            <div class="col-sm-10 form-group">
                <label asp-for="@Model.Price" class="text-label form-label" for="typeNumber">Цена</label>
                <input asp-for="@Model.Price" type="number" id="typeNumber" class="form-control" />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>

        </div>


        <div class="row mb-3">

            <div class="col-sm-10 form-group text-div">
                <label asp-for="@Model.ImageUrl" class="text-label" for="exampleFormControlInput1">Изображение</label>
                <input name="imageUrl" asp-for="@Model.ImageUrl" type="text" class="form-control" id="exampleFormControlInput1">
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>
        </div>


        <div class="row mb-3">
            <select class="form-select" aria-label="Default select example">
                <option selected>Категория</option>
                <option value="Trucks">Камиони</option>
                <option value="Oils">Масла</option>
            </select>
        </div>


        <div class="col-10">
            <button id="submit-btn" type="submit" class="w-100 btn btn-primary">Добави</button>
        </div>
    </form>

</div>