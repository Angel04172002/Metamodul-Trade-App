@model ClientRequestFormViewModel

@{
    ViewData["Title"] = "Контакти";
}


<h2 class="first-heading sub-heading text-center">Контакти</h2>


<div class="sub-container text-center">

    <p>гр. София 1408</p>
    <p>ж.к. "Стрелбище</p>
    <p>ул. "Мила Родина" 36</p>
    <p>тел.: +359 88 / 511 14 03</p>
    <p>тел.: +359 88 / 790 47 42</p>
    <p>e-mail: office@metamodul.eu</p>

</div>


<div class="text-center">

    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2933.1782185617135!2d23.297241781412346!3d42.67876704519449!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40aa851fd7578113%3A0x5f7c31d8b42900c7!2sMetamodul!5e0!3m2!1sen!2sbg!4v1509282289464" width="540" height="450" frameborder="0" style="border:0"></iframe>

</div>


<div class="form-container text-center">

    <h2 class="second-heading sub-heading text-center">Направи запитване</h2>

    <form asp-controller = "ClientRequest" asp-action="Add" class="request-form">


        <div class ="row mb-3">
            <div class="col-sm-10 form-group phone-div">
                <label asp-for="@Model.PhoneNumber" class="phone-label" for="exampleFormControlInput1">Телефон</label>
                <input name="phoneNumber" asp-for="@Model.PhoneNumber" type="text" class="form-control" id="exampleFormControlInput1">
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>

            </div>
        </div>



        <div class="row mb-3">

            <div class="col-sm-10 form-group topic-div">
                <label asp-for="@Model.Topic" class="topic-label" for="exampleFormControlInput1">Тема</label>
                <input name = "topic" asp-for="@Model.Topic" type="text" class="form-control" id="exampleFormControlInput1">
                <span asp-validation-for="@Model.Topic" class="text-danger"></span>

            </div>
        </div>


        <div class="row mb-3">

            <div class="col-sm-10 form-group message-div">
                <label asp-for="@Model.Message" class="comment-label" for="exampleFormControlTextarea1">Съобщение</label>
                <textarea name="message" asp-for="@Model.Message" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                <span asp-validation-for="@Model.Message" class="text-danger"></span>
            </div>

        </div>

        <div class="col-10">
            <button id="request-submit-btn" type="submit" class="w-100 btn login-btn btn-primary">Изпрати</button>
        </div>
    </form>

</div>


@section Styles {
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="~/css/contacts.css" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}